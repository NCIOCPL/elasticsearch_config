{"template": "bestbets*",
   "settings": { 
    "analysis": {
      "filter": {
       "english_stop": {
         "type":       "stop",
         "stopwords":   [  "a", "an", "and", "are", "as", "at", "be", "but", "by",
      "for", "if", "in", "into", "is", "it",
       "not", "of", "on", "or", "such",
      "that", "the", "their", "then", "there", "these",
      "they", "this", "to", "was", "will", "with" ] 
                    },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "minimal_english"
        }
      },
      "analyzer": {
          "nostem": {
          "type": "custom",
          "tokenizer":  "standard",
          "filter": [
            "lowercase",
            "english_stop",
            "unique",
            "english_stemmer"
            ]
       }}
    }},
    "mappings": {
       "synonyms": {
        "properties": {
          "category": {
            "type": "text",
            "analyzer": "nostem"
          },
          "contentid": {
            "type": "keyword"
          },
          "is_exact": {
            "type": "boolean"
          },
          "is_negated": {
            "type": "boolean"
          },
          "language": {
            "type": "keyword"
          },
          "synonym": {
            "type": "text",
            "analyzer": "nostem"
          },
          "tokencount": {
            "type": "integer"
          }
        }
      }
    }
  }