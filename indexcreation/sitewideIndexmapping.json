{
"template": "sitewidesearch*",
    "settings": { 
      "number_of_shards": 1 ,
      "analysis": {
      "filter": {
	    
        "cgov_synonym_filter": {
           "type" : "synonym",
          "synonyms_path" : "synonym.txt"
        },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "english"
        },
        "english_possessive_stemmer": {
          "type":       "stemmer",
          "language":   "possessive_english"
        }
      },
      "analyzer": {
        "cgovenglish": {
          "tokenizer":  "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "stop",
            "cgov_synonym_filter",
            "english_stemmer"
			      
          ]
        }
      }
    }
    },
    "mappings": {
    "doc": {
			 "properties": {
               "anchor": {
                  "type": "text"
               },
               
               "type": {
                  "type": "keyword"
               }
			   ,
               "content": {
                "type" : "text",
				"analyzer": "cgovenglish",
				"fields" : { "es" : {"type": "text","analyzer": "spanish"}}
               },
               "digest": {
                  "type": "keyword"
               },
               "host": {
                  "type": "keyword"
               },
               "id": {
                  "type": "text"
               },
               "metatag.content-language": {
                  "type": "keyword"
               },
               "metatag.description": {
                "type" : "text",
				"analyzer": "cgovenglish",
				"norms": { "enabled": false },
				"fields" : 
				{ "es" : {"type": "text","analyzer": "spanish","norms": { "enabled": false }}}
               },
               "metatag.keywords": {
                "type" : "text",
				"analyzer": "cgovenglish",
				"fields" : { "es" : {"type": "text","analyzer": "spanish"}}
               },
			   "metatag.dcterms-type": {
                  "type": "keyword"
               },
               "segment": {
                  "type": "keyword"
               },
               "title": {
                "type" : "text"
				      }
				,
               "searchtitle": {
                "type": "text",
                "analyzer": "cgovenglish",
				        "fields" : { 
				          "es" : {"type": "text","analyzer": "spanish"}
				          
				        }
				}
				       ,
               "tstamp": {
                  "type": "text"
               },
               
               "url": {"type": "keyword"},
               
               "searchurl": {
                  "type": "text",
                  "analyzer": "cgovenglish",
                  "fields" : { 
                    "raw" : {"type": "keyword"},
                    "es" : {"type": "text","analyzer": "spanish"}
                  }
                  
               }, 
			   
			   "boost": {"type": "float"}
			   
			   
			   
            }
         }
      }
}
